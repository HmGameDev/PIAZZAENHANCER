{
  "manifest_version": 3,
  "name": "Piazza Enhancer",
  "version": "1.0",
  "description": "Enhances Piazza's appearance with customizable themes and font options.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://piazza.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
